{
  "name": "Chronos Hub",
  "short_name": "Chronos",
  "description": "Next-generation time management platform with AI-powered features",
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#1a1a2e",
  "theme_color": "#4361ee",
  "orientation": "any",
  "icons": [
    {
      "src": "images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/maskable_icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Start Timer",
      "short_name": "Timer",
      "description": "Start a countdown timer",
      "url": "/index.html?tab=timer",
      "icons": [{ "src": "images/timer_icon.png", "sizes": "192x192" }]
    },
    {
      "name": "Set Alarm",
      "short_name": "Alarm",
      "description": "Set a new alarm",
      "url": "/index.html?tab=alarm",
      "icons": [{ "src": "images/alarm_icon.png", "sizes": "192x192" }]
    },
    {
      "name": "Focus Session",
      "short_name": "Focus",
      "description": "Start a focus session",
      "url": "/index.html?tab=focus",
      "icons": [{ "src": "images/focus_icon.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "screenshots": [
    {
      "src": "images/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "images/screenshot2.png",
      "sizes": "1280x720",
      "type": "image/png"
    }
  ],
  "categories": ["productivity", "utilities", "lifestyle"],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "geolocation"
  ],
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/",
    "update_via_cache": "none"
  }
} 